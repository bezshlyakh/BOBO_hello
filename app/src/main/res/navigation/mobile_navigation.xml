        android:name="com.example.bobo_hello.UI.SideNavigationItems.Options.OptionsFragment"
        android:label="@string/menu_options"
        tools:layout="@layout/fragment_options" />

    <fragment
        android:id="@+id/nav_app_info"
        android:name="com.example.bobo_hello.UI.SideNavigationItems.AppInfo.AppInfoFragment"
