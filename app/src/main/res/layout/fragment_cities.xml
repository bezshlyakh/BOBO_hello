<?xml version="1.0" encoding="utf-8"?>
<!-- макет списка -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LOForCities"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bodyMain"
    android:orientation="vertical">

    <TextView
        android:id="@+id/chosenCityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choseCityText"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/DarkMain"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listOfCities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp">

    </ListView>

    <TextView
        android:id="@+id/cities_list_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/empty_text" />

</LinearLayout>