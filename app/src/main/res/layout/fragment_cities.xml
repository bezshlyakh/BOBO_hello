<?xml version="1.0" encoding="utf-8"?>
<!-- макет списка -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/citiesFragLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bodyMain"
    android:orientation="vertical">

    <TextView
        android:id="@+id/chosenCityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choseCityText"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:lines="2"
        android:textColor="@color/DarkMain"
        android:background="@color/GreenBar"
        android:textSize="@dimen/choseCityText"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cities_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"/>

</LinearLayout>