<?xml version="1.0" encoding="utf-8"?>
<!-- макет погодного монитора -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/outputPan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bodyMain"
    android:orientation="vertical">

    <TextView
        android:id="@+id/chosenCityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:lines="2"
        android:textColor="@color/DarkMain"
        android:textSize="@dimen/chosenCityTextSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tempText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/DarkMain"
        android:textSize="@dimen/TempTextSize" />

    <TextView
        android:id="@+id/windSpeedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/DarkMain"
        android:textSize="@dimen/WindTextSize" />

    <ImageView
        android:id="@+id/weatherImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:adjustViewBounds="false"
        android:contentDescription="@string/weather_img"
        android:scaleType="fitCenter" />

</LinearLayout>