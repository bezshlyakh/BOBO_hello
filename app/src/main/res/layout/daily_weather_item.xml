<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/weather_info_display">

    <ImageView
        android:id="@+id/weatherItemImg"
        android:layout_width="@dimen/weatherItemImgSize"
        android:layout_height="@dimen/weatherImgSize"
        android:contentDescription="@string/weather_img"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tempItemText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weatherItemImg"
        android:textAlignment="center"
        android:textColor="@color/DarkMain"
        android:textSize="@dimen/info_item_text_size"/>

    <TextView
        android:id="@+id/windSpeedItemText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tempItemText"
        android:textAlignment="center"
        android:textColor="@color/DarkMain"
        android:textSize="@dimen/info_item_text_size"/>

</androidx.constraintlayout.widget.ConstraintLayout>