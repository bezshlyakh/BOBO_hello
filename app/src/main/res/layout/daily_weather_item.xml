<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/weather_info_display">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transp_blue_for_forecast"
        android:paddingTop="@dimen/weather_item_padding"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weatherItemImg"
            android:layout_width="@dimen/weatherItemImgSize"
            android:layout_height="@dimen/weatherItemImgSize"
            android:layout_weight="2"
            android:contentDescription="@string/weather_img"
            android:layout_gravity="start"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/dateItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:textColor="@color/DarkMain"
            android:textSize="@dimen/info_item_text_size"/>

        <TextView
            android:id="@+id/tempItemText"
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/DarkMain"
            android:textSize="@dimen/info_item_text_size"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>