<?xml version="1.0" encoding="utf-8"?>
<!-- макет списка -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hisFragLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bodyMain"
    android:orientation="vertical">

    <TextView
        android:id="@+id/historyFragTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_history_text"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:lines="2"
        android:textColor="@color/bodyMain"
        android:background="@color/colorPrimaryDark"
        android:textSize="@dimen/choseCityText"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_marginStart="@dimen/start_margin"
        android:layout_marginEnd="@dimen/start_margin"
        android:layout_marginTop="@dimen/start_margin"
        android:layout_marginBottom="@dimen/start_margin"
        card_view:cardCornerRadius="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleCityHisName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/place_his_title"
                android:textAlignment="viewStart"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/tableTitle"
                android:textSize="@dimen/choseCityText" />

            <TextView
                android:id="@+id/titleLastTemperature"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/last_temperature_title"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/tableTitle"
                android:textSize="@dimen/choseCityText" />

            <TextView
                android:id="@+id/titleLastUpdateData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/last_update_title"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/tableTitle"
                android:textSize="@dimen/choseCityText" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cities_his_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>