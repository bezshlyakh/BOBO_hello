<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:animationCache="false"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/topBackground"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1"
        app:srcCompat="@drawable/top_background"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/HelloText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:foregroundTint="@color/lightGreen"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="@string/helloText"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/DarkMain"
        android:textColorHighlight="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/topBackground"
        app:layout_constraintEnd_toStartOf="@+id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/optionsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LightBlueMain"
        android:text="@string/chooseOptions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LOForCities"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_weight="1"/>

    <FrameLayout
        android:id="@+id/LOForCities"
        android:layout_width="0px"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBackground"
        app:layout_constraintBottom_toTopOf="@id/optionsBtn"
        app:layout_constraintVertical_weight="1">

        <fragment android:name="com.example.bobo_hello.fragments.CitiesFragment"
            android:id="@+id/cities"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_cities" />

    </FrameLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        app:layout_constraintTop_toTopOf="@+id/topBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/bobo_weather"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>